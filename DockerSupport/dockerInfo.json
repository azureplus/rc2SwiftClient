{
	"containers": [
		{
			"Image": "rc2server/dbserver",
			"Hostname": "dbserver",
			"Labels": { "rc2.live": "" },
			"HostConfig": { "Binds": ["rc2_dbdata:/rc2"] },
			"HostConfig": {
				"NetworkMode": "rc2server",
				"LogConfig": { "Type": "json-file", "Config": { "max-file": "2", "max-size": "500k" } }
			},
			"NetworkingConfig": {
				"EndpointsConfig": {
					"rc2server": {
						"Aliases": [ "dbserver" ]
					}
				}
			}
		},
		{
			"Image": "rc2server/appserver",
			"Hostname": "appserver",
			"ExposedPorts": { "8088/tcp": {} },
			"Labels": { "rc2.live": "" },
			"HostConfig": {
				"NetworkMode": "rc2server",
				"PortBindings": { "8088/tcp": [{ "HostPort": "8088" }] },
				"LogConfig": { "Type": "json-file", "Config": { "max-file": "2", "max-size": "500k" } }
			},
			"NetworkingConfig": {
				"EndpointsConfig": {
					"rc2server": {
						"Aliases": [ "appserver" ]
					}
				}
			}
		},
		{
			"Image": "rc2server/compute",
			"Hostname": "compute",
			"Labels": { "rc2.live": "" },
			"HostConfig": {
				"NetworkMode": "rc2server",
				"LogConfig": { "Type": "json-file", "Config": { "max-file": "2", "max-size": "500k" } }
			},
			"NetworkingConfig": {
				"EndpointsConfig": {
					"rc2server": {
						"Aliases": [ "compute" ]
					}
				}
			}
		}
	]
}
